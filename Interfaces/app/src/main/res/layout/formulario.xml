<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/formRegitro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:src="@drawable/FONDO6" />
    <TextView
        android:id="@+id/textFormulario"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:fontStyle="italic"
        android:text="Formulario UNAC"
        android:textColor="@color/NEGRO"
        android:textSize="45dp"
        ></TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="115dp"
            android:background="@drawable/rectangulo"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Hora"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textfechaSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Fecha de Salida"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/textfechaLlegada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Fecha de Llegada"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/cuadro1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:text="Motivo"
                android:textColor="@color/NEGRO"
                android:textSize="22dp"
                android:layout_marginVertical="5dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/cuadro3"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="485dp"
        android:text="Enviar"
        android:background="@drawable/boton_verde"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="230dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="485dp"
        android:text="Cancelar"
        android:background="@drawable/boton_rojo"/>


</RelativeLayout>